<h1>Families</h1>

<%- semantic_form_for @new_family do |f| %>
  <%= f.error_messages %>
  <%= f.inputs %>
  <%= f.buttons %>
<%- end %>

<h3>Click on the family you wish to add yourself to.</h3>
<%- @families.each do |family|%>
  <p><%=link_to(h(family.name), "/#{family.name}/add_member") %>
    <%- if current_user.is_admin? %>
      | <%= link_to "Destroy", family, :confirm => 'Are you sure?', :method => :delete %>
    <%- end %>
  </p>
<%- end %>
